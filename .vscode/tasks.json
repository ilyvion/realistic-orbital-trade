{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all versions",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": ".vscode/buildAll.ps1",
            "problemMatcher": []
        },
        {
            "label": "build choose version",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": ".vscode/build.ps1",
            "args": [
                "${input:rimWorldVersion}"
            ],
            "problemMatcher": []
        },
        {
            "label": "build 1.5",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": ".vscode/build.ps1",
            "args": [
                "1.5"
            ],
            "problemMatcher": []
        },
        {
            "label": "build 1.4",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": ".vscode/build.ps1",
            "args": [
                "1.4"
            ],
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "rimWorldVersion",
            "type": "pickString",
            "description": "Rimworld version to build?",
            "options": [
                "1.5",
                "1.4",
            ],
            "default": "1.5"
        }
    ]
}
